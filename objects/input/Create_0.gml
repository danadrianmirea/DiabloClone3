/// @description Initialize Variables

// Input locked or free (ex. locks user from opening and closing menus when typing into the console)
free = true;

// Buttons that open menus
toggleConsole = vk_enter;
toggleMessageBox = ord("M");
toggleInventory = ord("I");

// Literal Keyboard Keys
escape = vk_escape;
space = vk_space;
tab = vk_tab;
shift = vk_shift;

// Mouse
leftClick = mb_left;
rightClick = mb_right;